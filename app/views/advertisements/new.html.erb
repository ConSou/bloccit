<h1>Create an Ad</h1>

<div class="col-md-8">
  <%= form_for @advertisements do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter Ad Title" %>
  </div>

  <div class="form-group">
    <%= f.label :copy %>
    <%= f.text_field :copy, rows: 8, class: "form-control", placeholder: "Enter Ad Copy" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, rows: 8, class: "form-control", placeholder: "Enter Price" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>

   <% end %>

</div>
